<Window x:Class="Moodex.Views.Utilities.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Moodex.Views"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="220" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="{Binding CurrentFile}" 
                   TextWrapping="Wrap"
                   FontSize="12"
                   Margin="0,0,0,15" 
                   TextAlignment="Center"/>
        <ProgressBar Value="{Binding Percent}" 
                     Height="24" 
                     Margin="0,0,0,15"
                     Maximum="100"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="{Binding Percent, StringFormat={}{0:F0}%}" 
                       FontSize="11"
                       Margin="0,0,0,10"/>
        </StackPanel>
        <Button Content="Cancel" 
                Width="100" 
                Command="{Binding CancelCommand}"
                HorizontalAlignment="Center"/>
    </StackPanel>
</Window>

