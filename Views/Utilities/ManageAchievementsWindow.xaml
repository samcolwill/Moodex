<Window x:Class="Moodex.Views.Utilities.ManageAchievementsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Achievements" Height="420" Width="520"
        WindowStartupLocation="CenterOwner"
        Icon="/Moodex;component/Assets/icon/icon.ico">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="List" Grid.Row="0" Grid.Column="0" ItemsSource="{Binding Items}" SelectedIndex="{Binding SelectedIndex}" Margin="0,0,8,0"/>

        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" VerticalAlignment="Top">
            <Button Content="Up" Width="80" Margin="0,0,0,6" Command="{Binding MoveUpCommand}"/>
            <Button Content="Down" Width="80" Margin="0,0,0,6" Command="{Binding MoveDownCommand}"/>
            <Separator Margin="0,6,0,6"/>
            <Button Content="Delete" Width="80" Margin="0,0,0,6" Command="{Binding DeleteCommand}"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Close" Width="90" Margin="6" IsCancel="True"/>
            <Button Content="Save Order" Width="110" Margin="6" IsDefault="True" Command="{Binding SaveCommand}"/>
        </StackPanel>
    </Grid>
</Window>


