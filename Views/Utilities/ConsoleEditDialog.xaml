<Window x:Class="Moodex.Views.Utilities.ConsoleEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Console" Height="200" Width="420"
        WindowStartupLocation="CenterOwner"
        Icon="/Moodex;component/Assets/icon/icon.ico">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>     <!-- spacer -->
            <RowDefinition Height="Auto"/>  <!-- buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Console ID -->
        <Label Grid.Row="0" Grid.Column="0" Content="Console ID:" VerticalAlignment="Center"/>
        <TextBox x:Name="IdBox" Grid.Row="0" Grid.Column="1" Margin="5"
                 HorizontalAlignment="Stretch"/>

        <!-- Name -->
        <Label Grid.Row="1" Grid.Column="0" Content="Name:" VerticalAlignment="Center"/>
        <TextBox x:Name="NameBox" Grid.Row="1" Grid.Column="1" Margin="5"
                 HorizontalAlignment="Stretch"/>

        <!-- Aspect ratio (two inputs aligned to the same width as other inputs) -->
        <Label Grid.Row="2" Grid.Column="0" Content="Cover Aspect:" VerticalAlignment="Center"/>
        <Grid Grid.Row="2" Grid.Column="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="AspectWBox"
                     Grid.Column="0"
                     VerticalAlignment="Center"
                     Height="{Binding ElementName=NameBox, Path=ActualHeight}"
                     TextAlignment="Center"/>
            <TextBlock Grid.Column="1" Text=":" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBox x:Name="AspectHBox"
                     Grid.Column="2"
                     VerticalAlignment="Center"
                     Height="{Binding ElementName=NameBox, Path=ActualHeight}"
                     TextAlignment="Center"/>
        </Grid>

        <!-- Buttons at bottom right -->
        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="5,5,0,0">
            <Button Content="Cancel" Width="75" Margin="5,0"
                    IsCancel="True"/>
            <Button Content="OK" Width="75" Margin="5,0"
                    IsDefault="True" Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>


