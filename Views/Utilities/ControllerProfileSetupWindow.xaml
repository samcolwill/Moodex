<Window x:Class="Moodex.Views.Utilities.ControllerProfileSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configure Controller Profile" Height="340" Width="520"
        WindowStartupLocation="CenterOwner"
        Background="#2a2a2a" Foreground="White">
    <DockPanel Margin="14" LastChildFill="True">
        <StackPanel DockPanel.Dock="Top" Margin="0,0,0,12">
            <TextBlock Text="Controller Profile Setup" FontSize="16" FontWeight="Bold"/>
            <TextBlock TextWrapping="Wrap" Margin="0,6,0,0">
                Follow the steps below to configure your controller for this game.
            </TextBlock>
        </StackPanel>

        <Border DockPanel.Dock="Top" BorderBrush="#444" BorderThickness="1" Padding="10" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="1. Click 'Start' to launch DS4Windows" Margin="0,2,0,2"/>
                <TextBlock Text="2. Access the 'Profiles' menu" Margin="0,2,0,2"/>
                <TextBlock Text="3. Select 'Edit' on the 'Default' profile" Margin="0,2,0,2"/>
                <TextBlock Text="4. Configure the controller to your preferences for this game" Margin="0,2,0,2"/>
                <TextBlock Text="5. Click 'Finish' to save the profile and close DS4Windows" Margin="0,2,0,2"/>
            </StackPanel>
        </Border>

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
            <Button x:Name="StartButton" Content="Start" Width="90" Margin="0,0,8,0" Click="StartButton_Click"/>
            <Button x:Name="FinishButton" Content="Finish" Width="90" Margin="0,0,8,0" Click="FinishButton_Click"/>
            <Button Content="Cancel" Width="90" Click="CancelButton_Click"/>
        </StackPanel>
    </DockPanel>
</Window>


