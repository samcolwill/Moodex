<Window x:Class="Moodex.Views.EditGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:Moodex.Converters"
        Title="Edit Game" Height="355" Width="400"
        Icon="/Moodex;component/Assets/icon/icon.ico"
        WindowStartupLocation="CenterOwner">

    <!-- converter to toggle emulator controls -->
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid Margin="5">
        <!-- rows for each form field -->
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/><!-- Name -->
            <RowDefinition Height="30"/><!-- Console -->
            <RowDefinition Height="30"/><!-- File path + Browse -->
            <RowDefinition Height="30"/><!-- Genre dropdown -->
            <RowDefinition Height="30"/><!-- Genre list -->
            <RowDefinition Height="35"/><!-- Release date -->
            <RowDefinition Height="Auto"/><!-- Buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <!-- labels -->
            <ColumnDefinition Width="*"/>
            <!-- inputs -->
            <ColumnDefinition Width="70"/>
            <!-- buttons -->
        </Grid.ColumnDefinitions>

        <!-- Name -->
        <Label Grid.Row="0" Grid.Column="0" Content="Name:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"
                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Console dropdown (showing friendly descriptions) -->
        <Label Grid.Row="1" Grid.Column="0" Content="Console:" VerticalAlignment="Center"/>

        <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"
          ItemsSource="{Binding Consoles}"
          SelectedValue="{Binding ConsoleId, Mode=TwoWay}"
          SelectedValuePath="Id"
          DisplayMemberPath="Name"
          IsEnabled="{Binding IsConsoleEnabled}" />

        <!-- File path + Browse button -->
        <Label Grid.Row="2" Grid.Column="0" Content="Game File:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="5,5,0,5"
                 Text="{Binding FileSystemPath, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Grid.Row="2" Grid.Column="2" Margin="5" Content="Browse..."
                Command="{Binding BrowseCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>

        <!-- Genres (multi) -->
        <Label Grid.Row="3" Grid.Column="0" Content="Genres:" VerticalAlignment="Center"/>
        <Grid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ComboBox Grid.Column="0"
                      ItemsSource="{Binding Genres}"
                      SelectedItem="{Binding GenreToAdd}"/>
            <Button Grid.Column="1" Content="Add" Width="60" Margin="5,0,0,0"
                    Command="{Binding AddGenreCommand}"/>
        </Grid>
        <ListBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="1" Margin="5,0,0,5"
                 ItemsSource="{Binding SelectedGenres}"
                 SelectedItem="{Binding SelectedGenreInList}"/>
        <Button Grid.Row="4" Grid.Column="2" Content="Remove" Margin="5,0,5,5"
                Command="{Binding RemoveGenreCommand}"
                CommandParameter="{Binding SelectedGenreInList}"/>

        <!-- Release Date picker -->
        <Label Grid.Row="5" Grid.Column="0" Content="Release Date:" VerticalAlignment="Center"/>
        <DatePicker Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Height="25" Margin="5"
                    SelectedDate="{Binding ReleaseDate}"/>

        <!-- Cancel / Save buttons -->
        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3"
                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="Cancel" Width="75" Margin="5,0,0,5"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Button Content="Save Changes" Width="100" Margin="5,0,0,5"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </Grid>
</Window>
