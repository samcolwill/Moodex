<Window x:Class="Moodex.Views.AddGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:Moodex.Converters"
        Title="Add Game" Height="355" Width="400"
        Icon="/Moodex;component/Assets/icon/icon.ico"
        WindowStartupLocation="CenterOwner">

    <!-- allows binding a bool to Visibility (Visible/Collapsed) -->
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid Margin="5">
        <!-- grid layout: 8 rows for fields + buttons -->
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/><!-- Name -->
            <RowDefinition Height="30"/><!-- Console -->
            <RowDefinition Height="30"/><!-- Create game folder button -->
            <RowDefinition Height="30"/><!-- Add game cover buttons -->
            <RowDefinition Height="30"/><!-- File path + Browse -->
            <RowDefinition Height="30"/><!-- Genre dropdown -->
            <RowDefinition Height="30"/><!-- Genre list -->
            <RowDefinition Height="35"/><!-- Release date -->
            <RowDefinition Height="Auto"/><!-- Buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <!-- label column -->
            <ColumnDefinition Width="*"/>
            <!-- input column -->
            <ColumnDefinition Width="70"/>
            <!-- button column -->
        </Grid.ColumnDefinitions>

        <!-- Name field -->
        <Label Grid.Row="0" Grid.Column="0" Content="Name:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"
                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Console selector -->
        <Label Grid.Row="1" Grid.Column="0" Content="Console:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"
          ItemsSource="{Binding Consoles}"
          SelectedValue="{Binding ConsoleId, Mode=TwoWay}"
          SelectedValuePath="Id"
          DisplayMemberPath="Name"
          IsEnabled="{Binding IsConsoleEnabled}"/>

        <!-- Create game folder helper -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="✔" Foreground="LimeGreen" Margin="0,0,4,0"
                   HorizontalAlignment="Right" VerticalAlignment="Center"
                   Visibility="{Binding GameFilesConfirmed, Converter={StaticResource BoolToVis}}"/>
        <Button Grid.Row="2" Grid.Column="1" Content="Add game files..."
                Margin="5,5,0,5" HorizontalAlignment="Stretch"
                Command="{Binding CreateGameFolderAndOpenCommand}"/>
        <Button Grid.Row="2" Grid.Column="2" Content="Confirm" Margin="5"
                Command="{Binding ConfirmGameFolderCommand}"/>

        <!-- Add game cover helper -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="✔" Foreground="LimeGreen" Margin="0,0,4,0"
                   HorizontalAlignment="Right" VerticalAlignment="Center"
                   Visibility="{Binding CoverConfirmed, Converter={StaticResource BoolToVis}}"/>
        <Button Grid.Row="3" Grid.Column="1" Content="Add game cover..."
                Margin="5,5,0,5" HorizontalAlignment="Stretch"
                Command="{Binding AddGameCoverCommand}"/>
        <Button Grid.Row="3" Grid.Column="2" Content="Confirm" Margin="5"
                Command="{Binding ConfirmGameCoverCommand}"/>

        <!-- Launch Target and Browse button -->
        <Label Grid.Row="4" Grid.Column="0"
               Content="Launch Target:"
               VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" Margin="5,5,0,5"
                 Text="{Binding FileSystemPath, UpdateSourceTrigger=PropertyChanged}"
                 IsEnabled="{Binding IsFileSystemPathEnabled}"/>
        <Button Grid.Row="4" Grid.Column="2" Margin="5" Content="Browse..."
                Command="{Binding BrowseCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                IsEnabled="{Binding IsBrowseEnabled}"/>

        <!-- Genres selector (multi) -->
        <Label Grid.Row="5" Grid.Column="0" Content="Genres:" VerticalAlignment="Center"/>
        <Grid Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <ComboBox Grid.Column="0"
                      ItemsSource="{Binding Genres}"
                      SelectedItem="{Binding GenreToAdd}"
                      IsEnabled="{Binding IsGenreEnabled}"/>
            <Button Grid.Column="1" Content="Add" Width="60" Margin="5,0,0,0"
                    Command="{Binding AddGenreCommand}"
                    IsEnabled="{Binding IsGenreEnabled}"/>
        </Grid>

        <ListBox Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="1" Margin="5,0,0,5"
                 ItemsSource="{Binding SelectedGenres}"
                 SelectedItem="{Binding SelectedGenreInList}"/>
        <Button Grid.Row="6" Grid.Column="2" Content="Remove" Margin="5,0,5,5"
                Command="{Binding RemoveGenreCommand}"
                IsEnabled="{Binding IsGenreEnabled}"
                CommandParameter="{Binding SelectedGenreInList}"/>

        <!-- Release Date picker -->
        <Label Grid.Row="7" Grid.Column="0" Content="Release Date:" VerticalAlignment="Center"/>
        <DatePicker Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Height="25" Margin="5"
                    SelectedDate="{Binding ReleaseDate}"
                    IsEnabled="{Binding IsReleaseDateEnabled}"/>

        <!-- Action buttons -->
        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="3"
                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Content="Cancel" Width="75" Margin="5,0,0,5"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Button Content="Add Game" Width="100" Margin="5,0,0,5"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </Grid>
</Window>
