<UserControl x:Class="Moodex.Views.Settings.GeneralSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Margin="10" VerticalAlignment="Top">
        <TextBlock Text="General" FontWeight="Bold" Margin="0,0,0,8"/>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
            <TextBlock Text="Default Group By:" VerticalAlignment="Center" Width="140"/>
            <ComboBox Width="180"
                      ItemsSource="{Binding GroupByOptions}"
                      SelectedItem="{Binding SelectedDefaultGroupBy}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
