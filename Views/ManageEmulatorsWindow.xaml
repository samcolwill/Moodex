<Window x:Class="Moodex.Views.ManageEmulatorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Moodex.ViewModels"
        xmlns:util="clr-namespace:Moodex.Utilities"
        xmlns:conv="clr-namespace:Moodex.Converters"
        Title="Manage Emulators"
        Height="450" Width="600"
        Icon="/Moodex;component/Assets/icon/icon.ico"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <!-- converts an EXE path into a 32×32 ImageSource -->
        <conv:ExecutableToIconConverter x:Key="IconConverter"/>
        <!-- strips path, shows only filename -->
        <conv:FileNameConverter x:Key="FileNameConverter"/>
        <!-- for zebra‐striping -->
        <SolidColorBrush x:Key="AltRowBrush" Color="#F7F7F7"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Emulator list -->
        <ListView ItemsSource="{Binding Emulators}"
                  AlternationCount="2"
                  Grid.Row="0"
                  HorizontalContentAlignment="Stretch"
                  MouseDoubleClick="ListView_MouseDoubleClick">
            <!-- alternating background -->
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="White"/>
                    <Style.Triggers>
                        <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                            <Setter Property="Background" Value="{StaticResource AltRowBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- 32×32 Icon -->
                        <Image Width="32" Height="32"
                               Margin="0,0,8,0"
                               Source="{Binding ExecutablePath,
                                        Converter={StaticResource IconConverter}}"/>

                        <!-- Name / Path / Console -->
                        <StackPanel Grid.Column="1"
                                    Orientation="Vertical"
                                    Margin="0,0,8,0">
                            <TextBlock Text="{Binding Name}"
                                       FontWeight="Bold"
                                       FontSize="14"/>
                            <TextBlock Text="{Binding ExecutablePath,
                                                      Converter={StaticResource FileNameConverter}}"
                                       FontStyle="Italic"
                                       FontSize="12"
                                       Foreground="Gray"/>
                            <TextBlock Text="{Binding EmulatedConsoleName}"
                                       FontSize="12"/>
                        </StackPanel>

                        <!-- Open button -->
                        <Button Grid.Column="2"
                                Content="Open"
                                Margin="0,0,8,0"
                                Padding="8,0"
                                Height="24"
                                Command="{Binding DataContext.OpenEmulatorCommand,
                                         RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"/>

                        <!-- Edit btn -->
                        <Button Grid.Column="3" Content="Edit"
                                Margin="0,0,8,0"
                                Padding="8,0,8,0"
                                Height="24"
                                Command="{Binding DataContext.EditEmulatorCommand,
                                                 RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"/>

                        <!-- Remove btn -->
                        <Button Grid.Column="4" Content="Remove"
                                Margin="0,0,0,0"
                                Padding="8,0,8,0"
                                Height="24"
                                Command="{Binding DataContext.RemoveEmulatorCommand,
                                                 RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}"/>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Close button -->
        <Button Grid.Row="1"
                Content="Close"
                Width="80"
                HorizontalAlignment="Right"
                Margin="0,10,0,0"
                Command="{Binding CloseCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
    </Grid>
</Window>

