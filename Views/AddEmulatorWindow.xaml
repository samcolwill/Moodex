<Window x:Class="Moodex.Views.AddEmulatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Moodex.ViewModels"
        xmlns:conv="clr-namespace:Moodex.Converters"
        Title="Add Emulator" Height="303" Width="400"
        Icon="/Moodex;component/Assets/icon/icon.ico"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/><!-- ID -->
            <RowDefinition Height="Auto"/><!-- Name -->
            <RowDefinition Height="Auto"/><!-- Target Console -->
            <RowDefinition Height="Auto"/><!-- Executable -->
            <RowDefinition Height="Auto"/><!-- Arguments -->
            <RowDefinition Height="Auto"/><!-- Buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>

        <!-- ID -->
        <Label Grid.Row="0" Grid.Column="0" Content="ID:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"
             Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Name -->
        <Label Grid.Row="1" Grid.Column="0" Content="Name:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"
             Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Consoles (multi-select) -->
        <Label Grid.Row="2" Grid.Column="0"
               Content="Consoles:"
               VerticalAlignment="Top"/>
        <ListBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"
                 ItemsSource="{Binding ConsoleChoices}" Height="90">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding Console.Name}"
                              IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Executable Path -->
        <Label Grid.Row="3" Grid.Column="0" Content="Executable:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" Margin="5"
             Text="{Binding ExecutablePath, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Grid.Row="3" Grid.Column="2" Margin="5" Content="Browse..."
            Command="{Binding BrowseCommand}"
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>

        <!-- Default Arguments -->
        <Label Grid.Row="4" Grid.Column="0" Content="Arguments:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"
                 Text="{Binding DefaultArguments, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Actions -->
        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3"
                Orientation="Horizontal" HorizontalAlignment="Right" Margin="5,5,0,0">
            <Button Content="Cancel" Width="75" Margin="5,0"
              Command="{Binding CancelCommand}"
              CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Button Content="Add Emulator" Width="100" Margin="5,0"
              Command="{Binding SaveCommand}"
              CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </Grid>
</Window>

