<Window x:Class="SamsGameLauncher.AddEmulatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Emulator" Height="300" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- ID -->
            <RowDefinition Height="Auto"/>
            <!-- Name -->
            <RowDefinition Height="Auto"/>
            <!-- Executable Path -->
            <RowDefinition Height="Auto"/>
            <!-- Default Arguments -->
            <RowDefinition Height="Auto"/>
            <!-- Button -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- ID -->
        <Label Grid.Row="0" Grid.Column="0" Content="ID:" VerticalAlignment="Center"/>
        <TextBox x:Name="IdTextBox" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"/>

        <!-- Name -->
        <Label Grid.Row="1" Grid.Column="0" Content="Name:" VerticalAlignment="Center"/>
        <TextBox x:Name="NameTextBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"/>

        <!-- Executable Path -->
        <Label Grid.Row="2" Grid.Column="0" Content="Executable:" VerticalAlignment="Center"/>
        <TextBox x:Name="ExecutablePathTextBox" Grid.Row="2" Grid.Column="1" Margin="5"/>
        <Button Content="Browse..." Grid.Row="2" Grid.Column="2" Margin="5" Click="BrowseExecutable_Click"/>

        <!-- Default Arguments -->
        <Label Grid.Row="3" Grid.Column="0" Content="Arguments:" VerticalAlignment="Center"/>
        <TextBox x:Name="DefaultArgumentsTextBox" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"/>

        <!-- Add Emulator Button -->
        <Button Content="Add Emulator" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3"
                HorizontalAlignment="Stretch" Margin="10" Click="AddEmulatorButton_Click"/>
    </Grid>
</Window>
