<Window x:Class="SamsGameLauncher.EditGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Game" Height="350" Width="400"
        Icon="Assets/launcher.ico">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <!-- Rows for each field -->
            <RowDefinition Height="30"/>
            <!-- Name -->
            <RowDefinition Height="30"/>
            <!-- Game Type (Read-Only) -->
            <RowDefinition Height="30"/>
            <!-- Emulator -->
            <RowDefinition Height="30"/>
            <!-- Game File -->
            <RowDefinition Height="30"/>
            <!-- Console -->
            <RowDefinition Height="30"/>
            <!-- Genre -->
            <RowDefinition Height="30"/>
            <!-- Release Date -->
            <RowDefinition Height="Auto"/>
            <!-- Save Changes -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>

        <!-- Name -->
        <Label Grid.Row="0" Grid.Column="0" Content="Name:" VerticalAlignment="Center"/>
        <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"/>

        <!-- Game Type (Read-only display) -->
        <Label Grid.Row="1" Grid.Column="0" Content="Game Type:" VerticalAlignment="Center"/>
        <TextBox x:Name="GameTypeTextBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"
                 Text="{Binding GameTypeName}" IsReadOnly="True" />

        <!-- Emulator (Dropdown) -->
        <Label Grid.Row="2" Grid.Column="0" Content="Emulator:" VerticalAlignment="Center"/>
        <ComboBox x:Name="EmulatorComboBox" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"
                  ItemsSource="{Binding Emulators}" DisplayMemberPath="Name"/>

        <!-- Game File Path -->
        <Label Grid.Row="3" Grid.Column="0" Content="Game File:" VerticalAlignment="Center"/>
        <TextBox x:Name="GamePathTextBox" Grid.Row="3" Grid.Column="1" Margin="5"/>
        <Button Content="Browse..." Grid.Row="3" Grid.Column="2" Margin="5" Click="BrowseGameFile_Click"/>

        <!-- Console (Dropdown) -->
        <Label Grid.Row="4" Grid.Column="0" Content="Console:" VerticalAlignment="Center"/>
        <ComboBox x:Name="ConsoleComboBox" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"
                  ItemsSource="{Binding Consoles}"/>

        <!-- Genre (Dropdown) -->
        <Label Grid.Row="5" Grid.Column="0" Content="Genre:" VerticalAlignment="Center"/>
        <ComboBox x:Name="GenreComboBox" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"
                  ItemsSource="{Binding Genres}"/>

        <!-- Release Date (DatePicker) -->
        <Label Grid.Row="6" Grid.Column="0" Content="Release Date:" VerticalAlignment="Center"/>
        <DatePicker x:Name="ReleaseDatePicker" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"
                    SelectedDate="2004-01-01"/>

        <!-- Save Changes Button -->
        <Button Content="Save Changes" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" Margin="5"
                Click="SaveButton_Click"/>
    </Grid>
</Window>
