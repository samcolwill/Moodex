<Window x:Class="SamsGameLauncher.EditGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Game" Height="300" Width="400">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="70"/>
        </Grid.ColumnDefinitions>

        <!-- Name -->
        <Label Grid.Row="0" Grid.Column="0" Content="Name:" VerticalAlignment="Center"/>
        <TextBox x:Name="NameTextBox" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"/>

        <!-- Emulator (Dropdown) -->
        <Label Grid.Row="1" Grid.Column="0" Content="Emulator:" VerticalAlignment="Center"/>
        <ComboBox x:Name="EmulatorComboBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"
                  ItemsSource="{Binding Emulators}" DisplayMemberPath="Name"/>

        <!-- Game File Path -->
        <Label Grid.Row="2" Grid.Column="0" Content="Game File:" VerticalAlignment="Center"/>
        <TextBox x:Name="GamePathTextBox" Grid.Row="2" Grid.Column="1" Margin="5"/>
        <Button Content="Browse..." Grid.Row="2" Grid.Column="2" Margin="5" Click="BrowseGameFile_Click"/>

        <!-- Game Cover Path -->
        <Label Grid.Row="3" Grid.Column="0" Content="Cover Image:" VerticalAlignment="Center"/>
        <TextBox x:Name="GameCoverPathTextBox" Grid.Row="3" Grid.Column="1" Margin="5"/>
        <Button Content="Browse..." Grid.Row="3" Grid.Column="2" Margin="5" Click="BrowseGameImage_Click"/>

        <!-- Console (Dropdown) -->
        <Label Grid.Row="4" Grid.Column="0" Content="Console:" VerticalAlignment="Center"/>
        <ComboBox x:Name="ConsoleComboBox" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"
                  ItemsSource="{Binding Consoles}"/>

        <!-- Genre (Dropdown) -->
        <Label Grid.Row="5" Grid.Column="0" Content="Genre:" VerticalAlignment="Center"/>
        <ComboBox x:Name="GenreComboBox" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"
                  ItemsSource="{Binding Genres}"/>

        <!-- Release Date (DatePicker) -->
        <Label Grid.Row="6" Grid.Column="0" Content="Release Date:" VerticalAlignment="Center"/>
        <DatePicker x:Name="ReleaseDatePicker" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"
                    SelectedDate="2004-01-01" xmlns:sys="clr-namespace:System;assembly=mscorlib" />

        <!-- Save Changes Button -->
        <Button Content="Save Changes" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" Margin="5"
                Click="SaveButton_Click"/>
    </Grid>
</Window>
